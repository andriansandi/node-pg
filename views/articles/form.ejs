<%- include('../partials/header'); -%>
<div class="container-fluid">
    <% if(typeof article !== 'undefined') { %> 
    <form action="/articles/update" method="post">
    <% } else { %>
    <form action="/articles/create" method="post">
    <% } %>
        <label for="title">Title</label>
        <input type="text" name="title" <% if(typeof article !== 'undefined') { %> value="<%= article.title %>" <% } %>>
        <br>
        <label for="body">Body</label>
        <textarea class="input" name="body"><% if(typeof article !== 'undefined') { %><%= article.body %><% } %></textarea>
        <br>
        <label for="approved">Approved</label>
        <select name="approved" id="approved">
          <option value="true" <% if(typeof article !== 'undefined' && article.approved === true) { selected="selected" } %>>published</option>
          <option value="false" <% if(typeof article !== 'undefined' && article.approved === false) { selected="selected" } %>>draft</option>
        </select>
        <br>
        <label for="title">Author</label>
        <input type="text" name="author" <% if(typeof article !== 'undefined') { %> value="<%= article.author %>" <% } %>>
        <br>
        <% if(typeof article !== 'undefined') { %>
        <input type="hidden" name="id" value="<%= article.id %>">
        <% } %>
        <button class="btn btn-primary" type="submit">submit</button>
      </form>
</div>


<%- include('../partials/footer'); -%>
